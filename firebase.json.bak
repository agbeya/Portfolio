{
  "hosting": {
    "public": "dist",
    "ignore": ["**/.*", "**/node_modules/**"],
    "headers": [
      { "source": "**/*.@(js|css)", "headers": [{ "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }] },
      { "source": "**/*.@(png|jpg|jpeg|gif|svg|webp)", "headers": [{ "key": "Cache-Control", "value": "public,max-age=604800" }] }
    ],
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  }
}
